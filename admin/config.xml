<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component" label="COM_EXTPORTER_LABEL" description="COM_EXTPORTER_DESC">
	<field
		name="upload_maxsize"
		type="text"
		size="50"
		default="10"
		label="COM_EXTPORTER_FIELD_MAXIMUM_SIZE_LABEL"
		description="COM_EXTPORTER_FIELD_MAXIMUM_SIZE_DESC" />
	<field
			name="accept_format"
			type="text"
			size="50"
			default="bmp,csv,doc,gif,ico,jpg,jpeg,odg,odp,ods,odt,pdf,png,ppt,swf,txt,xcf,xls,BMP,CSV,DOC,GIF,ICO,JPG,JPEG,ODG,ODP,ODS,ODT,PDF,PNG,PPT,SWF,TXT,XCF,XLS"
			label="COM_EXTPORTER_FIELD_ACCEPT_FORMAT_LABEL"
			description="COM_EXTPORTER_FIELD_ACCEPT_FORMAT_DESC" />
	<field
		name="extensionsdetails_file_path"
		type="text"
		size="50"
		default="media/com_extporter/extensionsdetails/files"
		label="COM_EXTPORTER_EXTENSIONSDETAILS_PATH_FILE_FOLDER_LABEL"
		description="COM_EXTPORTER_EXTENSIONSDETAILSPATH_FILE_FOLDER_DESC" />

		<field
		name="extensionsdetails_image_path"
		type="text"
		size="50"
		default="media/com_extporter/extensionsdetails/images"
		label="COM_EXTPORTER_EXTENSIONSDETAILS_PATH_IMAGE_FOLDER_LABEL"
		description="COM_EXTPORTER_EXTENSIONSDETAILS_PATH_IMAGE_FOLDER_DESC" />
	
	</fieldset>
	
	<fieldset
			name="permissions"
			label="JCONFIG_PERMISSIONS_LABEL"
			description="JCONFIG_PERMISSIONS_DESC"
			>
	
			<field
				name="rules"
				type="rules"
				label="JCONFIG_PERMISSIONS_LABEL"
				filter="rules"
				validate="rules"
				component="com_extporter"
				section="component" />
		</fieldset>

	</config>
